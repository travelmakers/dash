{
  "extends": "../../tsconfig.base.json",
  "include": ["./src"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@travelmakers-design-v2/styles": ["../travelmakers-design-styles"],
      "@travelmakers-design-v2/hooks": ["../travelmakers-design-hooks"]
    }
  },
  "references": [
    { "path": "../travelmakers-design-hooks" },
    { "path": "../travelmakers-design-styles" }
  ]
}
